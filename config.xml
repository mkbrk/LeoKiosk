<?xml version='1.0' encoding='utf-8'?>
<widget id="org.leonetwork.kiosk" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Kiosk</name>
    <description>
    </description>
    <author email="support@leonetwork.org" href="https://www.leonetwork.org">
        LEO Network Team
    </author>
    <access origin="*" />
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="target-device" value="tablet" />
    <preference name="Orientation" value="landscape" />
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>need location access to find things nearby</string>
    </edit-config>
    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <preference name="Orientation" value="portrait" />
        <icon density="ldpi" src="www/res/icon/android/icon_ldpi36x36.png" />
        <icon density="mdpi" src="www/res/icon/android/icon_mdpi48x48.png" />
        <icon density="hdpi" src="www/res/icon/android/icon_hdpi72x72.png" />
        <icon density="xhdpi" src="www/res/icon/android/icon_xhdpi96x96.png" />
        <icon density="xxhdpi" src="www/res/icon/android/icon_xxhdpi144x144.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/icon_xxxhdpi192x192.png" />
        <splash density="land-ldpi" src="www/res/screen/android/splash_land_ldpi_320x240.png" />
        <splash density="land-mdpi" src="www/res/screen/android/splash_land_mdpi_480x320.png" />
        <splash density="land-hdpi" src="www/res/screen/android/splash_land_hdpi_800x480.png" />
        <splash density="land-xhdpi" src="www/res/screen/android/splash_land_xhdpi_1280x720.png" />
        <splash density="land-xxhdpi" src="www/res/screen/android/splash_land_xxhdpi_1600x960.png" />
        <splash density="land-xxxhdpi" src="www/res/screen/android/splash_land_xxxhdpi_1920x1280.png" />
        <splash density="port-ldpi" src="www/res/screen/android/splash_port_ldpi_240x320.png" />
        <splash density="port-mdpi" src="www/res/screen/android/splash_port_mdpi_320x480.png" />
        <splash density="port-hdpi" src="www/res/screen/android/splash_port_hdpi_480x800.png" />
        <splash density="port-xhdpi" src="www/res/screen/android/splash_port_xhdpi_720x1280.png" />
        <splash density="port-xxhdpi" src="www/res/screen/android/splash_port_xxhdpi_960x1600.png" />
        <splash density="port-xxxhdpi" src="www/res/screen/android/splash_port_xxxhdpi_1280x1920.png" />
    </platform>
    <platform name="ios">
        <icon height="57" platform="ios" src="www/res/icon/ios/icon57x57.png" width="57" />
        <icon height="114" platform="ios" src="www/res/icon/ios/icon114x114.png" width="114" />
        <icon height="40" platform="ios" src="www/res/icon/ios/icon40x40.png" width="40" />
        <icon height="80" platform="ios" src="www/res/icon/ios/icon80x80.png" width="80" />
        <icon height="50" platform="ios" src="www/res/icon/ios/icon50x50.png" width="50" />
        <icon height="100" platform="ios" src="www/res/icon/ios/icon100x100.png" width="100" />
        <icon height="60" platform="ios" src="www/res/icon/ios/icon60x60.png" width="60" />
        <icon height="120" platform="ios" src="www/res/icon/ios/icon120x120.png" width="120" />
        <icon height="180" platform="ios" src="www/res/icon/ios/icon180x180.png" width="180" />
        <icon height="72" platform="ios" src="www/res/icon/ios/icon72x72.png" width="72" />
        <icon height="144" platform="ios" src="www/res/icon/ios/icon144x144.png" width="144" />
        <icon height="76" platform="ios" src="www/res/icon/ios/icon76x76.png" width="76" />
        <icon height="152" platform="ios" src="www/res/icon/ios/icon152x152.png" width="152" />
        <icon height="29" platform="ios" src="www/res/icon/ios/icon29x29.png" width="29" />
        <icon height="58" platform="ios" src="www/res/icon/ios/icon58x58.png" width="58" />
        <icon height="87" platform="ios" src="www/res/icon/ios/icon87x87.png" width="87" />
        <splash height="1136" platform="ios" src="www/res/screen/ios/splash640x1136.png" width="640" />
        <splash height="1334" platform="ios" src="www/res/screen/ios/splash750x1334.png" width="750" />
        <splash height="2208" platform="ios" src="www/res/screen/ios/splash1242x2208.png" width="1242" />
        <splash height="1242" platform="ios" src="www/res/screen/ios/splash2208x1242.png" width="2208" />
        <splash height="1536" platform="ios" src="www/res/screen/ios/splash2048x1536.png" width="2048" />
        <splash height="768" platform="ios" src="www/res/screen/ios/splash1024x768.png" width="1024" />
        <splash height="2048" platform="ios" src="www/res/screen/ios/splash1536x2048.png" width="1536" />
        <splash height="1024" platform="ios" src="www/res/screen/ios/splash768x1024.png" width="768" />
        <splash height="960" platform="ios" src="www/res/screen/ios/splash640x960.png" width="640" />
        <splash height="480" platform="ios" src="www/res/screen/ios/splash320x480.png" width="320" />
    </platform>
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^8.0.0" />
    <engine name="ios" spec="^5.0.1" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.4" />
    <plugin name="cordova-plugin-file" spec="^5.0.0" />
    <plugin name="cordova-plugin-geolocation" spec="^3.0.0">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="Geolocation used to determine your current location" />
    </plugin>
    <plugin name="cordova-plugin-globalization" spec="^1.0.8" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.4" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.0" />
    <plugin name="cordova-plugin-screen-orientation" spec="^2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.3.0" />
</widget>
